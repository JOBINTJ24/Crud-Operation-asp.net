
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    
</head>
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    div {
        margin: 20px;
        border: 1px solid #ddd;
        padding: 20px;
    }
</style>

<body>
    <div>
        @{
            ViewBag.Title = "Students View";
        }

        <h2>Views</h2>

        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
            @{
                foreach (System.Data.DataRow dr in ViewBag.student.Rows)
                {
                    <tr>
                        <td>@dr["id"]</td>
                        <td>@dr["Sname"]</td>
                        <td>@dr["Email"]</td>
                        <td>@dr["Phone"]</td>
                        <td>@dr["department"]</td>
                        <td>
                            <a href="/student/Update_record1?id=@dr["id"]">Edit</a>
                            <a href="/student/delete_record1?id=@dr["id"]">Delete</a>
                        </td>
                    </tr>

                }

            }

        </table>
    </div>
</body>
</html>
